frame-color = blue-grey-900
settings-shadow-color = #400a0a
settings-highlight-color = red-700
// FIXME: Don't use veiport settings for mobile version, use percentage?
centerPos()
  bottom 0
  left 0
  margin auto
  position absolute
  right 0
  top 0

stepsShadow(color)
  box-shadow 5px 5px 0 color, -5px 5px 0 color, 5px -5px 0 color, -5px -5px 0 color

@keyframes stepsFlash
  0%
  100%
    color settings-highlight-color
  50%
    color settings-shadow-color

@keyframes winFlash
  0%
  100%
    opacity 1
  50%
    opacity 0

.SimonGame
  background frame-color
  font-family 'PT Mono', monospace
  margin 0 auto
  padding 0
  position relative
  user-select none
  // Hides highlight when tapping game peices on mobile
  -webkit-tap-highlight-color  rgba(white, 0)

  +above(breakpoints.tablet)
    border-radius 5%
    height 600px
    padding 15px
    width 600px
    z-depth('2')

  &__piece
    border 10px solid frame-color
    height 22vh
    width 100%

    +above(breakpoints.tablet)
      border-radius 5%
      border 0
      float left
      height calc(50% - 10px)
      margin 5px
      width calc(50% - 10px)

    &:not(:nth-child(2))
      border-top 0

    &--playing
      cursor pointer

    &--flash
      animation winFlash 0.5s linear infinite

    &--green
      background green-500

      &--active
        background green-a100

    &--red
      background red-500

      &--active
        background red-a100

    &--yellow
      background yellow-500

      &--active
        background yellow-a100

    &--blue
      background blue-500

      &--active
        background blue-a100

  &__settings
    background grey-300
    border 10px solid frame-color
    border-bottom 0
    color @background
    height 12vh
    position relative
    text-align center
    transition all 0.1s linear
    width 100%
    // Stops winning animation from pushing the game piece above the settings
    z-index 5

    +above(breakpoints.tablet)
      border 10px solid frame-color
      border-radius 50%
      height 35%
      width 35%
      centerPos()
      z-depth('1')

    &__strict
    &__steps
    &__switch
      background #2c0707
      display inline-block
      font-size 5vw
      height 100%
      line-height 11vh
      transition inherit
      width 33.333333333333%

      +above(breakpoints.tablet)
        z-depth('1')
        centerPos()

    &__strict
    &__steps
      border-right 10px solid frame-color

    &__strict
    &__switch
      +above(breakpoints.tablet)
        border 3px solid frame-color
        font-size 16px
        height 30px
        line-height 26px
        width 76px

    &__strict
      +above(breakpoints.tablet)
        top -30%

    &__steps
      +above(breakpoints.tablet)
        border 0
        border-radius 20%
        font-size 45px
        height 76px
        line-height 80px
        top 40%
        width @height

    &__switch
      cursor pointer

      +above(breakpoints.tablet)
        top -65%

  &--on
    & ^[0]__settings

      &__strict
        cursor pointer

        &--active
          background settings-highlight-color

      &__steps
        color settings-highlight-color
        cursor pointer

        &--flash
          animation stepsFlash 0.5s linear infinite

        +above(breakpoints.tablet)
          &:hover
            stepsShadow(green-900)

          &--running:hover
            stepsShadow(red-900)

      &__switch
        background settings-highlight-color

  &--off
    & ^[0]__settings

      &__steps
        color settings-shadow-color

      &__switch
        background settings-shadow-color
