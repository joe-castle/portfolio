.Projects
  cf()

  // FIXME: Make the Project the same dimensions/ratio but also adhere to the container
  &__project
    border 3px solid grey-300
    margin vr-block(1) auto 0 auto
    position relative
    width 100%
    z-depth('1.5')

    &__live-preview
      height vr-block(6)
      overflow hidden
      position relative

      > section
        absolute top left
        height 201%
        transform scale(.5)
        transform-origin top left
        width 201%

      &__overlay
        absolute top left
        background rgba(black, 0.7)
        content ''
        height 100%
        opacity 0
        width 100%
        transition all .2s linear

        &__links
          align()

          for icon, content in icons
            &--{icon}
              color grey-300
              font normal vr-block(4) Flaticon

              &:not(:first-child)
                margin-left vr-block(.3)

              &:before
                content content

        +hover-state()
          opacity 1

    &__title
      background grey-300
      padding vr-block(.15)
      margin 0
      text-align center

    +above(breakpoints.tablet)
      col(1/2, cycle: 2)

    +above(breakpoints.desktop)
      col(1/3, uncycle: 2, cycle: 3)
