.Projects
  &__wrapper
    cf()

  &__project
    aspect-ratio 16 9
    border border-size solid header-background-color
    margin vr-block(1) auto 0 auto
    width 100%

    &__live-preview
      height 80%
      overflow hidden
      position relative

      > iframe
        absolute top left
        height 201%
        transform scale(.5)
        transform-origin top left
        width @height

      &__overlay
        absolute top left
        background rgba(black, 0.7)
        content ''
        height 100%
        opacity 0
        width @height
        transition all .2s linear

        &__links
          align()
          // TODO: make a mixin / class for icons as used in footer as well
          for icon, content in icons
            &--{icon}
              color grey-300
              font normal vr-block(2) Flaticon

              &:not(:first-child)
                margin-left vr-block(.3)

              &:before
                content content

        +hover-state()
          opacity 1

    &__title
      background header-background-color
      display block
      font-size vr-block(1.1)
      height 20%
      margin 0
      position relative
      text-align center

      span
        width 100%
        align()

    +above(breakpoints.tablet)
      col(1/2, cycle: 2)

      // If there is only one project, then use full availble space
      &:first-child:nth-last-child(1)
        col(1/1, uncylce: 2)
