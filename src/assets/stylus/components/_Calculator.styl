.Calculator
  color grey-300
  margin 0 auto
  max-width 800px

  &__window
    border-bottom 5px solid blue-500
    background blue-grey-900
    height 10em
    position relative

    &__calc
    &__entry
      margin 0
      position absolute
      right 10%
      white-space nowrap

    &__entry
      bottom 15%
      color blue-500
      font-size 3em

    &__calc
      font-size 2em
      top 15%

  &__keys
    background blue-grey-900

    &__key
      cursor pointer
      display inline-block
      font-size 2em
      height 2em
      line-height @height
      text-align center
      user-select none
      width 25%

      +hover-state()
        background teal-500

      &--equals
        color blue-500
        float right
        font-size 5em
        height 1.6em
        line-height @height
