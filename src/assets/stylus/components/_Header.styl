@keyframes blink
  50%
    opacity 0

.Header
  background header-bg-color
  height 50%
  position relative
  transition all .2s linear

  &__img
    border 3px solid header-font-color
    border-radius 50%
    max-height vr-block(2)
    max-width vr-block(2)
    transition box-shadow .2s linear
    z-depth('1')

    +hover-state()
      z-depth('1.5')

  &__title
    absolute bottom left
    margin 0
    text-align center
    transition top .2s linear
    width 100%

    ^[0]--content-active &
      bottom vr-block(1)

    &::after
      animation blink 1s linear infinite
      color body-bg-color
      content '|'

      ^[0]--content-active &
        content ''

  &--content-active
    box-shadow 0 5px 11px 0 rgba(0,0,0,0.4), 0 4px 15px 0 rgba(0,0,0,0.32)
    height vr-block(7)
