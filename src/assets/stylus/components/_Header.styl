@keyframes blink
  50%
    opacity 0

.Header
  background header-background-color
  height 50vh
  position relative
  transition height layout-transition-time linear
  &__img
    border 5px solid body-background-color
    border-radius 50%
    height vr-block(header-img-size)
    transition border-color .2s linear
    width vr-block(header-img-size)

    +hover-state()
      border-color header-hover-color

  &__title
    absolute bottom left
    color header-color
    margin 0
    text-align center
    width 100%

    &::after
      animation blink 1s linear infinite
      color body-background-color
      content '|'

      ^[0]--content-active &
        content ''

  &--content-active
    border-bottom border-size solid header-color
    margin-bottom vr-block(1)
    height vr-block(header-height)
