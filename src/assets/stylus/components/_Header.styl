@keyframes blink
  50%
    opacity 0

.Header
  background header-bg-color
  height 100%
  position relative
  transition all .2s linear

  &__title
    margin 0
    text-align center
    transition top .2s linear
    width 100%
    align()

    ^[0]--content-active &
      top 55%

    &::after
      animation blink 1s linear infinite
      color body-bg-color
      content '|'

      ^[0]--content-active &
        content ''

  &--content-active
    box-shadow 0 5px 11px 0 rgba(0,0,0,0.4), 0 4px 15px 0 rgba(0,0,0,0.32)
    height vr-block(8)
