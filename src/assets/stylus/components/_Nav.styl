.Nav
  background body-background-color
  display none
  height 100%
  position fixed
  width 100%
  // ensure nav stays on top of the page
  z-index 10

  &__links
    text-align center
    align()

    &__link
      border-bottom 3px solid header-background-color
      color header-background-color
      font-size vr-block(1)
      margin vr-block(.5)
      padding vr-block(.25)
      transition all .2s linear
      stack()

      +hover-state()
        border-color header-hover-color

      &--active
        border-color header-hover-color

  &--visible
    display block

  +above(breakpoints.tablet)
    // FIXME: Nav sits over img so is unclickable. Tried 50% width and top right but
    // the container doesn't do its job then
    background none
    display block
    height vr-block(header-height)
    position absolute
    width 100%

    // TODO: Specilaised link hover state, add home and contact? Use the creative hover site
    &__links
      float right
      margin-top vr-block(header-img-size / 3)
      position static
      transform none

      &__link
        unstack()
        border-color body-background-color
        font-size vr-block(.7)
        color body-background-color
        margin-right vr-block(1)

        &--active
          border-color header-hover-color
