.GameOfLife
  margin 0 auto
  width 70 * 12px

  &__generation
    background blue-grey-700
    border 1px solid blue-grey-900
    color grey-200
    margin 0
    padding 20px
    text-align center

  &__grid
    box-sizing content-box
    display block
    height 50 * 12px

    // Cell styling is for canvas fallback.
    &__cell
      border-bottom 1px solid blue-grey-900
      border-right 1px solid blue-grey-900
      box-sizing border-box
      display inline-block
      float left
      height 12px
      margin 0
      padding 0
      width 12px

      &--dead
        background blue-grey-800

      &--alive
        background blue-400

      &--old
        background blue-800
