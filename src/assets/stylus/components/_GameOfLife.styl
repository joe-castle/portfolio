.GameOfLife
  margin 0 auto
  user-select none
  width 70 * 12px

  +below(breakpoints.desktop)
    width 60 * 12px

  +below(breakpoints.tablet)
    width 30 * 12px

  &__generation
  &__options
    background blue-grey-700
    border 1px solid blue-grey-900
    color grey-200
    margin 0
    padding 20px
    text-align center

  &__grid
    display block

    &--canvas-backup
      box-sizing content-box
      height 50 * 12px

    +hover-state()
      cursor pointer

    // Cell styling is for canvas fallback.
    &__cell
      border-bottom 1px solid blue-grey-900
      border-right 1px solid blue-grey-900
      box-sizing border-box
      display inline-block
      float left
      height 12px
      margin 0
      padding 0
      width 12px

      &--dead
        background blue-grey-800

      &--alive
        background blue-400

      &--old
        background blue-800

  &__options
    padding 0
    cf()

    &__draw
    &__patterns
      +below(breakpoints.desktop)
        display none

    &__controls
    &__draw
    &__patterns
      padding-bottom 10px
      padding-top 20px
      span(2/5)

    // TODO: Make a react element for custom range input

    &__controls
      div
        border 3px solid blue-grey-900
        box-sizing content-box
        height 36px
        line-height 0
        margin 0 auto
        width vr-block(6)

      label
        box-sizing content-box
        color blue-grey-900
        margin 20px auto -2px auto
        padding 0
        text-align center
        width vr-block(6)

        .title
        .speed
          border 3px solid blue-grey-900
          border-bottom 0
          color body-background-color
          display inline-block
          font-size vr-block(.6)
          padding-left 5px
          padding-right 5px
          text-align center
          width vr-block(1.6)

        .title
          background blue-grey-900
          font-weight bold
          margin-left -3px

      custom-range-input(blue-grey-900, blue-grey-900, vr-block(6))

      &__start
      &__pause
      &__reset
        margin-right 5px

      +below(breakpoints.desktop)
        span(1/1)

    &__draw
      border-left 3px solid blue-grey-900
      border-right 3px solid blue-grey-900
      padding vr-block(.8)
      span(1/5)

      &__mode
        border 3px solid blue-grey-900
        border-radius 5px
        color blue-grey-900
        cursor pointer
        display block
        font-size 48px
        transition all .1s linear

        &:last-child
          margin-top 20px

        &--active
          background blue-grey-900
          color body-background-color

    &__patterns

      select
        background none
        border 3px solid blue-grey-900
        color blue-grey-900
        font-weight bold
        transition all .2s linear
        width vr-block(7)

        +hover-state()
          background blue-grey-900
          color body-background-color
          outline none

      &__delete
        color blue-grey-900
        cursor pointer
        font-size vr-block(1)
        margin-left 5px
        transition all .2s linear
        vertical-align bottom

        +hover-state()
          color body-background-color

      &__name-input
        background none
        border 3px solid blue-grey-900
        color blue-grey-900
        font-weight 600
        margin 5px 5px 0 0
        padding vr-block(.1)
        transition all .2s linear

        +hover-state()
          background blue-grey-900
          color body-background-color
          outline none

      &__import-export
        margin-top 15px

        .Button
          width 35%

          &:first-child
            margin-right 20px
