.TimrJS

  blockquote
    border-left 5px solid blue-500
    padding-left vr-block(.5)

    a
      display block

  h5
    margin 0

  h1
  h2
  h3
  h4
  h5
    font-weight 600

  ul > ul
    margin 0 0 0 10px

  &__header
    color body-background-color
    background header-background-color
    font-weight 600
    padding-bottom vr-block(2)
    text-align center

    &__container
      relative()

    &__title
      font-size vr-block(2)

    &__projects-link
      absolute top vr-block(container-padding) left vr-block(container-padding)

      &__icon
        padding-bottom 3px
        vertical-align bottom

    &__github
      text-decoration none

  &__main
    padding vr-block(1)

    &__output-example
      color #FAC863
      font-weight 600

    &__badges
      a:not(:last-child)
        margin-right 5px

  &__start-example
  &__options-example
  &__ticker-example
    margin-bottom vr-block(1)

    &__interactive

      pre
        margin-bottom 0

      &__demo-buttons
        background blue-500
        color body-background-color
        height 100%
        padding vr-block(.5)
        text-align center
        cf()

        h3
          margin 0

        button
          margin-bottom 0
          col(1/3)

      &__error
        background red-500
        color body-background-color
        font-weight 600
        padding vr-block(.25)

    &__notes
      padding-left vr-block(1)

    input
      height vr-block(1)
      text-align center
      width vr-block(4)
