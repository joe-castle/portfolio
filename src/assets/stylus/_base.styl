// ---------------------------------------------
// ------ Reset
// ---------------------------------------------
@import '~normalize.css/normalize.css';

// Apply a natural box layout model to all elements,
// but allowing components to change
html
  box-sizing border-box

*
*:before
*:after
  box-sizing inherit

// ---------------------------------------------
// ------ Fonts
// ---------------------------------------------
@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:300|Source+Sans+Pro:300,300i,600');

normal = 300
bold = 600

// Social icons - Github, Codepen, FCC, Linkedin, Facebook, Email
@font-face
  font-family 'Flaticon'
  src url('../fonts/Flaticon.eot')
  src url('../fonts/Flaticon.eot?#iefix') format('embedded-opentype'),
    url('../fonts/Flaticon.woff') format('woff'),
    url('../fonts/Flaticon.ttf') format('truetype'),
    url('../fonts/Flaticon.svg#Flaticon') format('svg')
  font-weight normal
  font-style normal

+density(0)
  @font-face
    font-family 'Flaticon'
    src url('../fonts/Flaticon.svg#Flaticon') format('svg')

// ---------------------------------------------
// ------ Typography
// ---------------------------------------------
$body-font = text-font-stack
$header-font = text-font-stack

$min-font = 16px

$body-color = body-color
$header-color = subheading-color

typographic()

// ---------------------------------------------
// ------ Helpers
// ---------------------------------------------

// Ensures site takes up full height of the page
html
body
#root
.App
  height 100%

// Container class to keep content inline
// TODO: MAke as a mixin and apply to require components?
.container
  height 100%
  padding vr-block(container-padding)
  margin 0 auto
  max-width 1050px
  position relative
  width 100%

// Pre-loader animation
@keyframes load7
  0%
  80%
  100%
    box-shadow 0 2.5em 0 -1.3em
  40%
    box-shadow 0 2.5em 0 0

.loader::before
.loader::after
.loader
  border-radius 50%
  width 2.5em
  height 2.5em
  animation-fill-mode both
  animation load7 1.8s infinite ease-in-out

.loader
  font-size 10px
  margin -2.5em auto 2.5em auto
  position relative
  text-indent -9999em
  // transform translateZ(0)
  animation-delay -0.16s

.loader::before
  left -3.5em
  animation-delay -0.32s

.loader::after
  left 3.5em

.loader::before,
.loader::after
  content ''
  position absolute
  top 0

