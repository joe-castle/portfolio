// ---------------------------------------------
// ------ Reset
// ---------------------------------------------
@import '~normalize.css/normalize.css';

// Apply a natural box layout model to all elements,
// but allowing components to change
html
  box-sizing border-box

*
*:before
*:after
  box-sizing inherit

// ---------------------------------------------
// ------ Fonts
// ---------------------------------------------

// Body font
@font-face
  font-family 'Source Sans Pro'
  src url('../fonts/SourceSansPro-Light.ttf'),
    url('../fonts/SourceSansPro-LightItalic.ttf'),
    url('../fonts/SourceSansPro-Semibold.ttf')
  font-weight 300
  font-style normal

// Code font
@font-face
  font-family 'Source Code Pro'
  src url('../fonts/SourceCodePro-Light.ttf')
  font-weight 300
  font-style normal

// Social icons - Github, Codepen, FCC, Linkedin, Facebook, Email
@font-face
  font-family 'Flaticon'
  src url('../fonts/Flaticon.eot')
  src url('../fonts/Flaticon.eot?#iefix') format('embedded-opentype'),
    url('../fonts/Flaticon.woff') format('woff'),
    url('../fonts/Flaticon.ttf') format('truetype'),
    url('../fonts/Flaticon.svg#Flaticon') format('svg')
  font-weight normal
  font-style normal

+density(0)
  @font-face
    font-family 'Flaticon'
    src url('../fonts/Flaticon.svg#Flaticon') format('svg')

// ---------------------------------------------
// ------ Typography
// ---------------------------------------------
$body-font = text-font-stack
$header-font = text-font-stack

$min-font = 16px

$body-color = body-font-color
$header-color = header-font-color

typographic()

// ---------------------------------------------
// ------ Helpers
// ---------------------------------------------

// Ensures site takes up full height of the page
html
body
#root
.App
  height 100%

// Container class to keep content inline
.container
  height 100%
  padding vr-block(1)
  margin 0 auto
  max-width 1200px
  position relative
  width 100%

// ---------------------------------------------
// ------ Basic Styles
// ---------------------------------------------
a
  color header-font-color
  text-decoration none
  transition color .2s linear

  +hover-state()
    color rgba(@color, .5)
